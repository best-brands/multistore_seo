<?xml version="1.0"?>
<addon scheme="4.0">
    <id>multistore_seo</id>
    <name>MultiStore SEO</name>
    <description>Module allows the use of proper SEO tags for multiple stores</description>
    <version>1.0</version>
    <priority>2300</priority>
    <position>0</position>
    <status>active</status>
    <supplier>Best Brands</supplier>
    <supplier_link>https://github.com/best-brands</supplier_link>
    <default_language>en</default_language>

    <settings>
        <sections>
            <section id="general">
                <items>
                    <item id="default_storefront_id">
                        <name>Default storefront</name>
                        <type>input</type>
                        <default_value/>
                    </item>
                </items>
            </section>
        </sections>
    </settings>

    <authors>
        <author>
            <name>Harm Smits</name>
            <email>harm@bestbrands.eu</email>
            <phone>+31625500655</phone>
        </author>
    </authors>

    <autoload>
        <psr4 prefix="Tygh\Addons\MultiStoreSeo\">src</psr4>
    </autoload>

    <bootstrap>\Tygh\Addons\MultiStoreSeo\Bootstrap</bootstrap>
</addon>
